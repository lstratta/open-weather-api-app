pipeline {

    agent any

    tools {
        nodejs "NodeJS 16.14.0"
    }

    stages {
        stage('Build') {
            steps {
                echo "Building"
                sh 'cd backend && npm i'
            }
        }

        stage('Test') {

            environment {
                API_ENV = credentials('OpenWeatherAPI')
            }

            steps {
                echo "Testing"
                sh "cd backend && npm run testjenkins --api=$API_ENV"
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying"
            }
        }
    }
}