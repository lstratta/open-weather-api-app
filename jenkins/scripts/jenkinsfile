pipeline {

    agent any

    tools {
        nodejs "NodeJS 16.14.0"
    }

    stages {
        stage('Build') {
            steps {
                echo "Building"
                sh 'cd backend && npm i'
            }
        }

        stage('Test') {

            environment {
                withCredentials([string(credentialsId: 'OpenWeatherAPI', variable: 'TOKEN' )
            }

            steps {
                echo "Testing"
                sh 'cd backend && npm run testjenkins --api=$TOKEN'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying"
            }
        }
    }
}