pipeline {

    agent any

    tools {
        nodejs "NodeJS 16.14.0"
    }

    environment {
        API_ENV = credentials('OpenWeatherAPI')
        TEST_ENV = credentials('jenkins-test-cred')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building"
                sh 'pwd'
                sh 'cd backend && npm i'
            }
        }

        stage('Test') {
            steps {
                echo "Testing"
                sh 'pwd'
                sh 'cd backend'

                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying"
            }
        }
    }
}